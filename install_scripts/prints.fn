progress_anim () {
progress=("[  ]" "[. ]" "[..]")
while :; do
	for (( i=0; i<3; i++ )); do
		echo -en "\e[1m${progress[$i]}\e[0m" "\b\b\b\b\b"
		sleep 0.5
	done
done
}

print_success () {
echo -e "\e[1m[\e[32mOK\e[97m]\e[0m"
}

print_mysql_anim () {
echo -e "\e[93m"
while :; do
	for (( i=0; i<4; i++ )); do
		cat ./ascii/mysql/mysql_$i.ascii
		sleep 0.2
		echo -en "\033[5A"
		echo -e "\r\033[K"
		echo -e "\r\033[K"
		echo -e "\r\033[K"
		echo -e "\r\033[K"
		echo -e "\r\033[K"
		echo -en "\033[5A"
	done
done
}

