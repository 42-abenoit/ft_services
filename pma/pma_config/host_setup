server {
    listen 5000;
    listen [::]:5000;
	server_name _;
	root /home/www/phpmyadmin;
	index	index.php;

	ssl_certificate		/etc/nginx/ssl/phpmyadmin.crt;
	ssl_certificate_key	/etc/nginx/ssl/phpmyadmin.key;

   	location / {

        	fastcgi_pass		unix:/run/php/php-fpm7.sock;
        	fastcgi_index		index.php;
			fastcgi_param   SCRIPT_FILENAME /home/www/phpmyadmin$fastcgi_script_name;
			include fastcgi_params;
		}
	}
